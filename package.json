{
  "name": "github-mcp",
  "version": "0.0.5",
  "description": "GitHub MCP Server with OAuth support for Issue management",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "github-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "start-http": "node dist/index.js http",
    "dev": "tsc && node dist/index.js",
    "inspector": "npm run build && npx @modelcontextprotocol/inspector node dist/index.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "github",
    "oauth",
    "issues",
    "model-context-protocol",
    "github-api",
    "mcp-server",
    "typescript"
  ],
  "author": {
    "name": "Seey215"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Seey215/github-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/Seey215/github-mcp/issues"
  },
  "homepage": "https://github.com/Seey215/github-mcp#readme",
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "dotenv": "^16.3.1",
    "hono": "^4.10.6",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
